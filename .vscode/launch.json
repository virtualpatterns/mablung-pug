  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch ...",
      "autoAttachChildProcesses": false,
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/distributable-esmodule/command/transform.js",
      "skipFiles": [ "<node_internals>/**" ],
      "stopOnEntry": false,
      "args": [
        "create-module", "./source/test/command/resource/transform-00.pug",
        "--flag", "wx"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test ...",
      "preLaunchTask": "build",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ava",
      "runtimeArgs": [
        "--serial",
        "distributable-commonjs/test/**/scenario-00.test.*"
      ],
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    } 
  ]
}
